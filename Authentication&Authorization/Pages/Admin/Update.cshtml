@page
@using Authentication_Authorization.Models;
@model Authentication_Authorization.Pages.Admin.UpdateModel
@{

}

<h1 class="bg-info text-white">Update User</h1>
<a asp-page="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-page="Update" method="post">
    <input name="id" value="@Model.UserUpdateDto.Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="@Model.UserUpdateDto.Username"></label>
        <input asp-for="@Model.UserUpdateDto.Username" value="@Model.UserUpdateDto.Username" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserUpdateDto.NewPassword"></label>
        <input name="newPassword" asp-for="@Model.UserUpdateDto.NewPassword" value="@Model.UserUpdateDto.NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserUpdateDto.NewEmail"></label>
        <input name="newEmail" asp-for="@Model.UserUpdateDto.NewEmail" value="@Model.UserUpdateDto.Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
